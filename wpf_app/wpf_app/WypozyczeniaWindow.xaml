<Window x:Class="wpf_app.WypozyczeniaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zarządzanie Wypożyczeniami" Height="600" Width="800">
    <Grid>
        <!-- Formularz -->
        <StackPanel Orientation="Vertical" Margin="10" Width="300">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="ID Klienta:" Width="100" VerticalAlignment="Center" />
                <TextBox x:Name="IdKlientTextBox" Width="180" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="ID Samochodu:" Width="100" VerticalAlignment="Center" />
                <TextBox x:Name="IdSamochodTextBox" Width="180" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Data Od:" Width="100" VerticalAlignment="Center" />
                <DatePicker x:Name="DataOdDatePicker" Width="180" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Data Do:" Width="100" VerticalAlignment="Center" />
                <DatePicker x:Name="DataDoDatePicker" Width="180" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Ilość:" Width="100" VerticalAlignment="Center" />
                <TextBox x:Name="IloscTextBox" Width="180" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Typ Ilości:" Width="100" VerticalAlignment="Center" />
                <TextBox x:Name="TypIlosciTextBox" Width="180" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Stawka:" Width="100" VerticalAlignment="Center" />
                <TextBox x:Name="StawkaTextBox" Width="180" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Kwota:" Width="100" VerticalAlignment="Center" />
                <TextBox x:Name="KwotaTextBox" Width="180" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Button Content="Dodaj" Width="80" Margin="5" Click="DodajWypozyczenie_Click" />
                <Button Content="Edytuj" Width="80" Margin="5" Click="EdytujWypozyczenie_Click" />
                <Button Content="Usuń" Width="80" Margin="5" Click="UsunWypozyczenie_Click" />
                <Button Content="Odśwież" Width="80" Margin="5" Click="OdswiezWypozyczenia_Click" />
            </StackPanel>
        </StackPanel>

        <!-- Lista -->
        <ListView x:Name="WypozyczeniaListView" Margin="320,10,10,10" VerticalAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50" />
                    <GridViewColumn Header="ID Klienta" DisplayMemberBinding="{Binding IdKlient}" Width="100" />
                    <GridViewColumn Header="ID Samochodu" DisplayMemberBinding="{Binding IdSamochod}" Width="100" />
                    <GridViewColumn Header="Data Od" DisplayMemberBinding="{Binding DataOd}" Width="150" />
                    <GridViewColumn Header="Data Do" DisplayMemberBinding="{Binding DataDo}" Width="150" />
                    <GridViewColumn Header="Ilość" DisplayMemberBinding="{Binding Ilosc}" Width="50" />
                    <GridViewColumn Header="Typ Ilości" DisplayMemberBinding="{Binding TypIlosci}" Width="100" />
                    <GridViewColumn Header="Stawka" DisplayMemberBinding="{Binding Stawka}" Width="100" />
                    <GridViewColumn Header="Kwota" DisplayMemberBinding="{Binding Kwota}" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
